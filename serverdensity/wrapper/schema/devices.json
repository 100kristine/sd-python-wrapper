{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Devices",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "privateIps": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^([1-9]{1,3}\\.){3}[1-9]{1,3}$"
            }
        },
        "publicIps": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^([1-9]{1,3}\\.){3}[1-9]{1,3}$"
            }
        },
        "location": {
            "type": "object",
            "properties": {
                "countryCode": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "countryName": {
                    "type": "string"
                }
            },
            "required": ["countryCode", "text", "countryName"]
        },
        "tags": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "format": "mongoId"
            }
        }
    },
    "required": [
        "name"
    ]
}
